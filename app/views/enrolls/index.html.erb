<h1>Listing enrolls</h1>
<%= will_paginate %>
<table>
  <tr>
    <th>Expiration</th>
    <th>Course Title</th>
    <th>Name</th>
    <th></th>
  </tr>
<!-- When submit the form, the view rendered will be the index view of our courses resource -->
<%= form_tag(enrolls_path, :method => "get", class: "navbar-form", id: "search-form") do %>
 <center> <div class="input-append">
<%= text_field_tag :search, params[:search], class: "span4", placeholder: "Search for User by ID - Need to fix" %></center>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
         of using a Rails form helper -->
<% end %>

<% @enrolls.each do |enroll| %>
  <tr>
    <td><%= enroll.expiration %></td>
<td><%= enroll.course.title %></td>
<td><%= enroll.user.name %></td>
    <td><%= link_to 'Show', enroll %></td>
    <td><%= link_to 'Edit', edit_enroll_path(enroll) %></td>
    <td><%= link_to 'Destroy', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate %>
<br />

<%= link_to 'New Enroll', new_enroll_path %>
